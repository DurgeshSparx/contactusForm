{% comment %} .form-group input:focus~label, .form-group select:focus~label{
    top: -13px;
    font-size: 12px;
    color: #000;
} {% endcomment %}
.form-group input:focus ~ label,
.form-group input:not(:placeholder-shown) ~ label,
.form-group input:valid ~ label,
.form-group select:focus ~ label,
.form-group select:valid ~ label {
    top: -13px;
    font-size: 12px;
    color: #000;
}
.border-animation:after{
    content: "";
    position: absolute;
    bottom: 0;
    left: 45%;
    height: 2px;
    width: 10px;
    visibility: hidden;
    background-color: #000;
    transition: .2s ease all;
    z-index: 5;
}
.form-group input:focus~.border-animation:after {
    visibility: visible;
    width: 100%;
    left: 0;
}


.form-row {
  display: flex;
  gap: 15px;
  width:100%;
  flex-direction: column;
}
@media screen and (min-width: 600px) {
  .form-row {
    flex-direction: row;
  }
}
.form-group {
  flex: 1;
  position:relative;
  border-bottom: 1px solid #7a7a7a !important;
}
label[for="countryCode"]{
    top: -13px;
    font-size: 12px;
    color: #000;
}
.or-text {
  text-align: center;
  font-size: 16px;
  margin: 10px 0;
  color: #555;
  font-family: 'Centra No1 TRIAL';
  font-weight: 400;
}

.checkbox {
  display: flex;
  align-items: center;
  font-size: 13px;
  margin-top: 15px;
}
.contact-form .checkbox{
    display: flex;
    align-items: center;
    font-size: 13px;
    margin-top: 15px;
    flex-wrap: wrap;
    gap: 10px;
    width: 100%;
}
.checkbox input {
    opacity: 0;
    cursor: pointer;
    position: absolute;
    z-index: 2;
    width: 100%;
    height: 100%;
}

.checkbox a {
  color: #4e4e4e;
  text-decoration: underline;
}
.checkbox .check-lable:before {
    content: "";
    -webkit-appearance: none;
    background-color: transparent;
    border: 1px solid #222;
    box-shadow: 0 1px 2px #0000000d, inset 0 -15px 10px -12px #0000000d;
    padding: 9px;
    display: inline-block;
    position: relative;
    vertical-align: middle;
    cursor: pointer;
    margin-right: 5px;
    border: 1px solid;
    border-radius: 50%;
}
.checkbox input:checked+label:before {
    border-color: #127749;
    background-color: #127749;
}

.checkbox input:checked+label:after {
    content: "";
    display: block;
    position: absolute;
    top: 5px;
    left: 7px;
    width: 4px;
    height: 10px;
    border: solid #fff;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
}
.submit-btn {
  width: 100%;
  background: #006400;
  color: white;
  padding: 12px;
  font-size: 14px;
  border: none;
  border-radius: 25px;
  margin-top: 20px;
  cursor: pointer;
  transition: 0.3s;
  max-width: max-content;
  margin: 0 auto;
   font-family: 'Centra No1 TRIAL';
    font-weight:600;
}

.submit-btn:hover {
  background: #004d00;
}
.shopify-block.shopify-app-block{width: 100%;}
</style>

<script>
document.getElementById("contactForm").addEventListener("submit", async function(e) {
  e.preventDefault();

  const formData = new FormData(this);
  const data = Object.fromEntries(formData.entries());
console.log('payload data',data);
  try {
    const response = await fetch("/apps/formsubmission", {  // Subpath prefix/Subpath of the app proxy 

      method: "POST",
        headers: {
          'Content-Type': 'application/json',
          'Access-Control-Allow-Origin': '*',
      },
      body: JSON.stringify(data)
    });

    const result = await response.json();

    if (result.success) {
      document.getElementById("formMessage").innerText = "✅ Message sent successfully!";
    } else {
      document.getElementById("formMessage").innerText = "❌ Failed: " + result.error;
    }
  } catch (err) {
    document.getElementById("formMessage").innerText = "⚠️ Something went wrong!";
  }
});
</script>

