<!-- Contact Form -->
<section class="ourter-wrapper">
<div class="contact-form-wrapper">
  <h2 class="form-heading">Send a message</h2>
  <p class="form-subheading">Please enter your contact information</p>
  <p class="form-note">We use this information to send you a reply</p>

  <form class="contact-form" id="contactForm" >
    <div class="form-row main-row-wrapper">
      <div class="form-row">
          <div class="form-group select-box floating-label">
            <!-- Title -->
            <select id="title" name="title"  class="floating-select required-input" value="" required="">
              <option value=""></option>
              <option value="">Select</option>
              <option value="mr">Mr</option>
              <option value="ms">Ms</option>
              <option value="mrs">Mrs</option>
              <option value="dr">Dr</option>
            </select>
             <div class="border-animation"></div>
            <label for="title">Title *</label>
          </div>
          <!-- Name -->
          <div class="form-group">
              <input type="text" id="firstName" name="first_name" required placeholder="">
              <div class="border-animation"></div>
              <label for="firstName">First Name</label>
            </div>
      </div>
      <!-- LastName -->
      <div class="form-row">
        <div class="form-group">
          <input type="text" id="lastName" name="last_name" required placeholder="">
          <div class="border-animation"></div>
          <label for="lastName">Last Name *</label>
        </div>
      </div>
    </div>

    <!-- Email -->
     <div class="form-row">
      <div class="form-group">
        <input type="email" id="email" name="email" required placeholder="">
        <div class="border-animation"></div>
        <label for="email">Email *</label>
      </div>
    </div>

    <div class="form-row">
    <p class="or-text">and/or</p>
    </div>
    <!-- Phone -->
    <div class="form-row">
      <div class="form-group">
        <label for="countryCode">Phone Country Code</label>
        <select id="countryCode" name="country_code">
          <option value="+91">India (+91)</option>
          <option value="+1">USA (+1)</option>
          <option value="+44">UK (+44)</option>
          <option value="+61">Australia (+61)</option>
        </select>
      </div>
      <div class="form-group">
        <input type="tel" id="phone" name="phone" required placeholder="">
        <div class="border-animation"></div>
        <label for="phone">Phone</label>
      </div>
    </div>

    <!-- Store -->
    <div class="form-group form-row">
      <select id="store" name="store" required>
         <option value=""></option>
        <option value="">Select Store</option>
        <option value="store1">Store 1</option>
        <option value="store2">Store 2</option>
      </select>
      <div class="border-animation"></div>
      <label for="store">Store</label>
    </div>
    <!-- Terms -->
    <div class="form-row">
    <label class="checkbox">
      <input type="checkbox" required>
      <label class="check-lable" for="checkbox-lable"> <span class="checkbox-text">
            I agree to Dia's 
            <a href="#" class="link">terms of use</a> and take note of the 
            <a href="#" class="link">privacy policy</a></span></label>
    </label>
    </div>

    <!-- Button -->
    <button type="submit" class="submit-btn">Send message</button>
  </form>
  <p id="formMessage"></p>
</div>
</section>


<style>
.contact-form{
    display: flex;
    flex-direction: column;
    gap: 25px;
}
