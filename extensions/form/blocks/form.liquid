.form-group label {
    font-family: 'Centra No1 TRIAL';
    font-weight: 400;
    position: absolute;
    top: 0;
    left: 0;
    text-align: left;
    display: inline-block;
    height: 14px;
    font-size: 16px;
    letter-spacing: .4px;
    line-height: 24px;
    font-weight: 400;
    margin: 0 auto;
    cursor: text;
    z-index: 1;
    color: #4e4e4e;
    text-transform: capitalize;
