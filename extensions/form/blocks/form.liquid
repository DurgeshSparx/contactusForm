  max-width:640px;
  margin: 40px auto;
  padding: 20px;
  color: #3d2b1f;
  text-align:center;
}
.floating-select:focus {
    outline: none;
}
.form-heading,.form-subheading {
    color: #452c1e;
    line-height: 1.2;
    letter-spacing: 0;
    text-transform: none;
    font-weight: 700;
    font-family: 'Centra No1 TRIAL';
    margin: 0;
    font-size:22px;
}

.form-subheading {
    font-size: 44px;
}

.form-note {
  text-align: center;
  font-size: 16px;
  margin-bottom: 20px;
  color: #212121;
  font-family: 'Centra No1 TRIAL Hairline';
}
.main-row-wrapper{
  display: flex;
  gap: 15px;
}  
.contact-form label {
  display: block;
  font-size: 16px;
  margin:0;
  font-family: 'Centra No1 TRIAL';
  font-weight: 400;
}

.contact-form input,
.contact-form select {
  position: relative;
  margin: 0 !important;
  border: none !important;
  height: 30px;
  padding: 9px 0 0 !important;
  background: transparent;
  z-index: 2;
  font-size: 16px;
